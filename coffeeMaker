	int Bean::countBeans(int userInput){
	    int *ptrBeanNum;
	    ptrBeanNum = new int;
	    *ptrBeanNum = userInput * beanNum;
	    std::cout << "so : " << *ptrBeanNum << " beans will start grinding for you in a second\n";
	    delete ptrBeanNum;
	    
	    int *ptrBeanOz;
	    ptrBeanOz = new int;
