	int  Reservoir::waterPrep(int userInput){
	std::cout << "checking reservoir...\n";
	std::cout << "";// trying to get a countdown since Sleep() doesn't work properly in C++
	std::cout << "since you need " << userInput << " cup(s) of coffee \n";
	
	*ptrWater = water - userInput;
	
		if(*ptrWater > totalWater) {
			std::cout << "water is enough \n";
			std::cout << "now let's heat it up...\n";
		}
		
		else{
			while(*ptrWater < totalWater){
				*ptrWater = *ptrWater + waterRefill;
			}
			
			std::cout << "finally, water is enough\n";
			std::cout << "now let's heat it up'\n";
			
		}
	
	}
	
