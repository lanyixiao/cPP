	int Calculator::Cal(string inputOperator; int int1, int int2)
	{
	    switch(inputOperator)
	    {
	        case '+':
	            return int1 + int2;
	        case '-':
	            return int1 - int2;
	        case '*':
	            return int1 * int2;
	        case '/':
	            return int1 / int2;
	        default:
	            return 0;
	    }
	}
	
	
	Calculator cal;
	
	
	while(true){
		cin >> inputOperator;
		std::cout << "now enter the two numbers that you want to calculate: \n";
		cin >> int1 >> int2;
		
		head->data = int1;
		head->next = second;

		second->data = int2;
		second->next = NULL;
	
		
		if ((inputOperator == '/') && int2 == 0)
        {
            std::cout << "ERROR: division by zero \n";
            continue;
        }
        else
        {
            result = cal.Cal(intputOperator, int1, int2);
        }
        	std::cout << "so the result is: " << result << ". \n";
    }
	}
		
		
	
	
	
}
